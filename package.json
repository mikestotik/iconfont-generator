{
  "name": "iconfont-generator",
  "version": "1.0.0",
  "description": "Easy-to-use, pre-configured cli tool to generate webfont icon kits from a bunch of .svg files",
  "main": "index.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "",
    "serve": "webpack-dev-server --mode=development",
    "build": "webpack --mode production",
    "build:watch": "npm run clear:dist & webpack --mode production --watch",
    "clear:dist": "rm -rf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikestotik/iconfont-generator.git"
  },
  "keywords": [
    "font",
    "webfont",
    "svg",
    "ttf",
    "woff",
    "woff2"
  ],
  "author": {
    "name": "Mike Stotik",
    "email": "mikestotik@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikestotik/iconfont-generator/issues"
  },
  "homepage": "https://github.com/mikestotik/iconfont-generator#readme",
  "dependencies": {
    "colors": "^1.4.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "rxjs": "^6.6.2",
    "svg2ttf": "^5.0.0",
    "svgicons2svgfont": "^9.1.1",
    "ttf2eot": "^2.0.0",
    "ttf2woff": "^2.0.2",
    "ttf2woff2": "^3.0.0",
    "underscore": "^1.10.2",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.1",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^26.0.10",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.6.1",
    "@types/shelljs": "^0.8.8",
    "@types/svg2ttf": "^5.0.0",
    "@types/ttf2woff2": "^2.0.0",
    "@types/underscore": "^1.10.22",
    "@types/url-join": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "file-type": "^15.0.0",
    "jest": "^26.4.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "engines": {
    "node": ">=v8.1.0"
  }
}
